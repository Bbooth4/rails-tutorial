<div class="container">
  <div class="lead well">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <img class="media-object" src="<%= @question.gravatar %>">
        </a>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= @question.email %> asked:</h4>
        <%= @blog.body %>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      <div>
        <button type="button" class="btn btn-success btn-sm"  data-toggle="modal" data-target="#new-answer-modal">Submit new comment</a>
        </div>

        <%= render 'home/new_comment_form' %>

        <% @answers.each do |blog| %>
          <div class="media">
            <div class="media-left">
              <a href="#">
                <img class="media-object" src="<%= blog.gravatar %>">
              </a>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= blog.email %> blogged:</h4>
              <div><%= time_ago_in_words blog.created_at %> ago</div>
              <%= blog.body %>
            </div>
          </div>
        <% end %>

        <% if @blogs.empty? %>
          <div class="alert alert-info">Nothing here yet, be the first to blog?</div>
        <% end %>


      </div>
    </div>
  </div>
